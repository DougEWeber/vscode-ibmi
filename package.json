{
  "name": "igit",
  "displayName": "iGit",
  "description": "iGit access for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eradani.gitStatus",
        "title": "Status",
        "category": "Eradani iGit" 
      },
      {
        "command": "eradani.gitcheckout",
        "title": "Checkout",
        "category": "Eradani iGit"
      },
      
      {
        "command": "eradani.gitsave",
        "title": "Save",
        "category": "Eradani iGit"
      },
      {
        "command": "eradani.gitadd",
        "title": "Add",
        "category": "Eradani iGit"
      },
      {
        "command": "eradani.gitremove",
        "title": "Remove",
        "category": "Eradani iGit"
      },
      {
        "command": "eradani.gitundo",
        "title": "Undo",
        "category": "Eradani iGit"
      },
      {
        "command": "eradani.gitdiff",
        "title": "Diff",
        "category": "Eradani iGit"
      },
      {
        "command": "eradani.gitcommit",
        "title": "Commit",
        "category": "Eradani iGit"
      },
      {
        "command": "eradani.gitpush",
        "title": "Push",
        "category": "Eradani iGit"
      }
    ],
    "submenus": [
      {
        "id" : "eradani.igit",
        "label" : "IGit"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "submenu": "eradani.igit",
          "group" : "yourext@1"
        }
      ],
      "eradani.igit": [
        {
          "command": "eradani.gitStatus",
          "when" : "view == objectBrowser"
        },
        {
          "command": "eradani.gitsave",
          "when" : "view == objectBrowser"
        },
        {
          "command": "eradani.gitadd",
          "when" : "view == objectBrowser"
        },
        {
          "command": "eradani.gitremove",
          "when" : "view == objectBrowser"
        },
        {
          "command": "eradani.gitundo",
          "when" : "view == objectBrowser"
        },
        {
          "command": "eradani.gitdiff",
          "when" : "view == objectBrowser"
        },
        {
          "command": "eradani.gitcommit",
          "when" : "view == objectBrowser"
        },
        {
          "command": "eradani.gitpush",
          "when" : "view == objectBrowser"
        }
      ]
    }
  
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
